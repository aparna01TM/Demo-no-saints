{{ 'logo-section.css' | asset_url | stylesheet_tag }}
<div class="logo-section-container">
    {%- for block in section.blocks -%}
            <div class="logo"> 
                {{ block.settings.logo-section-image | image_url: width: 200 | image_tag }}
            </div>
    {%- endfor -%}
</div>
{% schema %}
{
    "name":"logo-section",
    "blocks": [
        {
          "type": "logo",
          "name": "Logo",
          "settings": [
            {
              "type": "image_picker",
              "id": "logo-section-image",
              "label": "Logo"
            }
          ]
        }
      ],
    "presets": [
            {
              "name": "logo-section"
            }
        ]
    }
{% endschema %}

